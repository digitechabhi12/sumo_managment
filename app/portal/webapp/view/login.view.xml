<mvc:View controllerName="portal.controller.login"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Page id="pagelogin" showHeader="false" class="sapUiContentPadding" busyIndicatorDelay="0">
        <content>
            <VBox justifyContent="Center" alignItems="Center" height="100%">
                <Panel
                    headerText="Welcome"
                    class="sapUiResponsiveMargin sapUiContentPadding"
                    width="400px"
                    backgroundDesign="Translucent"
                >
                    <VBox>
                        <Image
                            src="https://upload.wikimedia.org/wikipedia/commons/5/59/SAP_2011_logo.svg"
                            width="150px"
                            densityAware="false"
                            class="sapUiSmallMarginBottom sapUiMediumMarginTop"
                            visible="true"
                        />

                        <Label text="Email" labelFor="emailInput" />
                        <Input id="emailInput" placeholder="Enter your email" type="Email" />

                        <Label text="OTP" labelFor="otpInput" class="sapUiSmallMarginTop" />
                        <Input id="otpInput" placeholder="Enter OTP" type="Number" visible="false" />

                        <VBox class="sapUiSmallMarginTop" alignItems="End">
                            <Button id="btnSendOTP" text="Send OTP" type="Emphasized" press="onSendOTP" />
                            <Button id="btnVerifyOTP" text="Verify OTP" press="onVerifyOTP" visible="false" class="sapUiTinyMarginTop" />
                            <Button id="btnResendOTP" text="Resend OTP" press="onResendOTP" visible="false" enabled="false" class="sapUiTinyMarginTop" />
                        </VBox>
                    </VBox>
                </Panel>
            </VBox>
        </content>
    </Page>
</mvc:View>
