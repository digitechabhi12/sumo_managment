<mvc:View
    controllerName="portal.controller.Admin"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:unified="sap.ui.unified">

    <VBox class="sapUiSmallMargin">
        <!-- Admin Information Section -->
        <Title text="Admin Dashboard" level="H2"/>
        <Label text="User ID" />
        <Input value="admin123" editable="false" />
        <Label text="System Status" />
        <Input value="All systems operational" editable="false" />
    </VBox>

    <!-- HR Information Section -->
    <VBox class="sapUiSmallMargin">
        <Title text="HR Information" level="H3"/>
        <Label text="Employee Name" />
        <Input value="John Doe" editable="false" />
        <Label text="Employee ID" />
        <Input value="EMP123" editable="false" />
        <Label text="Department" />
        <Input value="Human Resources" editable="false" />
        <Label text="Join Date" />
        <Input value="01-Jan-2020" editable="false" />
        <Label text="Job Title" />
        <Input value="HR Manager" editable="false" />
    </VBox>

    <!-- Meeting Calendar Section -->
    <VBox class="sapUiSmallMargin">
        <Title text="Meeting Calendar" level="H3"/>
        
        <!-- Panel to contain the Calendar -->
        <Panel headerText="Calendar for Meetings" expandable="true" expanded="true">
            <content>
                <!-- Correct Calendar Control: sap.ui.unified.Calendar -->
                <unified:Calendar id="meetingCalendar" 
                                  select="onDateSelect"
                                  class="sapUiSmallMargin">
                </unified:Calendar>
            </content>
        </Panel>
    </VBox>

    <!-- Notification Icon and Task Information -->
    <HBox justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMarginEnd">
        <Title text="Task and Notifications" level="H3"/>
        
        <!-- Notification Button with Icon -->
        <Button
            icon="sap-icon://bell"
            press="onNotificationPress"
            tooltip="View Notifications"
            class="sapUiTinyMarginEnd">
        </Button>

        <!-- Notification Popover -->

    </HBox>

    <!-- Task Information Section -->
    <VBox class="sapUiSmallMargin">
        <Title text="Task Information" level="H3"/>
        <Label text="Pending Tasks"/>
        <Table>
            <columns>
                <Column>
                    <Text text="Task Name" />
                </Column>
                <Column>
                    <Text text="Deadline" />
                </Column>
                <Column>
                    <Text text="Priority" />
                </Column>
                <Column>
                    <Text text="Status" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="Prepare HR Report" />
                        <Text text="2025-09-03" />
                        <Text text="High" />
                        <Text text="In Progress" />
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="Update Employee Records" />
                        <Text text="2025-09-04" />
                        <Text text="Medium" />
                        <Text text="Not Started" />
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="Organize Training Session" />
                        <Text text="2025-09-10" />
                        <Text text="Low" />
                        <Text text="Completed" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>

</mvc:View>
